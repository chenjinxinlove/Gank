/*顶部*/

.gank-header {
    position: fixed;
    width: 100%;
    height: 2rem;
    border-bottom:1px solid #ccc; 
    display: flex;
    flex-direction: row;
    line-height: 2rem;
    z-index: 999;
}
.heightem{
    height: 2rem;
    width: 100%;
}
.gank-menu {
    width: 2rem;
    height: 100%;
}
.menu-icon {
    width: 2rem;
    height: 2rem;
    margin-left: 0.5rem;
}
.gank-seach {
     width: 60%;
     line-height: 1rem; 
     padding-left: 2rem;
}
.gank-seach input {
    text-align: center;
    margin-top: 0.35rem;
    border-radius: 0.2rem;
    background-color: #fff;
}
.seach-icon {
    padding: 0.6rem 0.5rem 0 0.5rem;
}


/*//弹出菜单*/
.popup-menu {
    position: fixed;
    top:2rem;
    left:0;
    width: 15rem;
    height: 25rem;
    box-shadow: 1px 1px 1px 1px silver;
    background-color: #fff;
    z-index: 99999
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.menu-option view {
    height: 2rem;
    line-height: 2rem;
    border-bottom: 2px solid #e9faff;
    margin: 0  2rem;
    text-align: center;
    color: #aaa;
}

/*有图片的样式*/
.haveImg{
    height: 15rem;
    width: 95%;
    margin: 0.45rem auto;
    background-color: #fff;
    box-shadow: 1px 1px 1px 1px lemonchiffon;
    position: relative;
    z-index: auto;
}
.haveImage {
    width: 100%;
    height: 15rem;
}
.haveDesc {
    position: absolute;
    right: 1rem;
    bottom: 1rem;
    color: #fff;
}
.havePublishedAt {
    position: absolute;
    right: 1rem;
    bottom: 0rem;
    color: #fff;
}

/*//保存图片*/
.modalImg {
    width: 100%;
    height: 20rem;
}